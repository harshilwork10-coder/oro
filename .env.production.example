# ============================================================
# ORO 9 Franchise POS — Production Environment Variables
# ============================================================
# Copy this file to your hosting platform's environment settings.
# DO NOT commit the real .env file with secrets to git.
# ============================================================

# ── Database ─────────────────────────────────────────────────
# Supabase PostgreSQL connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/postgres"

# ── NextAuth ──────────────────────────────────────────────────
# CRITICAL: Change this to your actual production domain
NEXTAUTH_URL="https://your-app.vercel.app"
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"

# ── Encryption ────────────────────────────────────────────────
# CRITICAL: Must be exactly 64 hex characters (32 bytes)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your-64-char-hex-key-here"

# ── JWT ───────────────────────────────────────────────────────
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-jwt-secret-here"

# ── Email (Gmail SMTP) ────────────────────────────────────────
GMAIL_USER="your-email@gmail.com"
# Generate an App Password at: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD="xxxx-xxxx-xxxx-xxxx"

# ── AWS S3 (Document Storage) ─────────────────────────────────
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_REGION="us-east-2"
AWS_S3_BUCKET="your-s3-bucket-name"

# ── Twilio SMS ────────────────────────────────────────────────
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+1XXXXXXXXXX"

# ── UPC Item Database ─────────────────────────────────────────
UPCITEMDB_API_KEY="your-upcitemdb-api-key"

# ── Security Options ──────────────────────────────────────────
# Set to true to block requests from different IP addresses (recommended in production)
STRICT_IP_BINDING=true
